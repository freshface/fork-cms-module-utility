{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}{% endblock %}

{% block content %}
  {% form settings %}
    <div class=" fork-module-content">

      <div class="row">
        <div class="col-md-12">
          <div class="fork-module-messages">
            <div class="alert alert-warning" role="alert">
              <p>
                {{ 'msg.UsePngs'|trans|ucfirst }}
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">

          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                og:image (og.png - 1200x630)
              </h3>
            </div>
            <div class="panel-body">

              <div class="form-group last">
                {% form_field og %}
              </div>

              <hr>

              <div class="form-group last">
                <img src="{{ THEME_URL }}/Icons/og.png?nocache={{date().timestamp}}" alt="" style="max-width:100%"/>
              </div>

            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                {{ 'lbl.ReplaceAllFavicons'|trans|ucfirst }}
                (min. 310x310 pixels)
              </h3>
            </div>
            <div class="panel-body">

              <div class="alert alert-info fork-module-messages" role="info">
                <p>
                  {{ 'msg.ReplaceAllFavicons'|trans|ucfirst }}
                </p>

              </div>

              <div class="form-group last">
                {% form_field all %}
              </div>

            </div>
          </div>

        </div>
      </div>

      <div class="row">
      {% for resolution in resolutions %}
        <div class=" col-lg-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                {{ resolution.name }}{{ resolution.seperator }}{{ resolution.resolution }}.png
              </h3>
            </div>
            <div class="panel-body" style="min-height:430px;">

              <div class="form-group last">
                {{ resolution.field|raw }}
              </div>

              <hr>

              <div class="form-group last">
                <img src="{{ THEME_URL }}/Icons/{{ resolution.name }}{{ resolution.seperator }}{{ resolution.resolution }}.png?nocache={{date().timestamp}}" alt="" style="max-width:100%"/>
              </div>

            </div>
          </div>
        </div>
      {% endfor %}
      </div>

    </div>

    <div class="row fork-module-actions">
      <div class="col-md-12">
        <div class="btn-toolbar">
          <div class="btn-group pull-right" role="group">
            <button id="save" type="submit" name="save" class="btn btn-primary">
              {{ 'lbl.Save'|trans|ucfirst }}
            </button>
          </div>
        </div>
      </div>
    </div>

  {% endform %}
{% endblock %}
